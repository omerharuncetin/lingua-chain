{
  "compilerOptions": {
    "target": "ES2020",
    "module": "nodenext",
    "declaration": true,
    "declarationDir": "./dist/esm",
    "outDir": "./dist/esm",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "NodeNext",
    "baseUrl": "./",
    "composite": true,
  },
  "include": [
    "src/**/*", "index.ts",
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
